generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model InstagramPost {
  id          Int        @id @default(autoincrement())
  date        DateTime
  description String
  clerkUserId String?
  user        ClerkUser? @relation(fields: [clerkUserId], references: [id], onDelete: Cascade)
}

model Link {
  id          Int        @id @default(autoincrement())
  link        String
  date        DateTime
  description String
  project     String
  clerkUserId String?
  user        ClerkUser? @relation(fields: [clerkUserId], references: [id], onDelete: Cascade)
}

model Project {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  clerkUserId String?
  users       ClerkUser? @relation(fields: [clerkUserId], references: [id], onDelete: Cascade)
}

model ClerkUser {
  id             String          @id
  instagramPosts InstagramPost[]
  todos          Link[]
  projects       Project[]
}
